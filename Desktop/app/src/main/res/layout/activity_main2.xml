<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:src="@drawable/purple_rain"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="#7B1FA2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:text="This app seeks to fill the void left by Prince's passing. Add as much PRINCE to your emotional cart as you need. \n \n As Prince famously said: \n 'I am yours now, and you are mine and together we'll love through all space and time.' "
        />

    <Button android:id="@+id/enterBtn"
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:text="Enter App"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"

        />

</FrameLayout>
